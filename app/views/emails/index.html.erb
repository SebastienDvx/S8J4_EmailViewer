<p id="notice"><%= notice %></p>

<h1>Emails</h1>


<p><strong><%= link_to 'New Email', new_email_path %></strong></p>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= link_to("#{email.object}", email, :remote => true) %></td>
        <td>
          <div id="current_mail">
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
